
@using NEST_App.Models
@model dynamic

<script src="~/Scripts/jquery-2.1.2.min.js"></script>
<script src="~/Content/ManagerView/managerJS.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Manager</title>
    <link rel="stylesheet" type="text/css" href="~/Content/ManagerView/managerCSS.css" />
</head>
<body>
    <h2>Manager</h2>

    <div class="outer">
        <div id="ass">
            <h4>Assigned UAVs</h4>
            <table class="assigned" id="assigned" style="border: 1px solid black;">
                <tr>
                    <th>UAV ID</th>
                    <th>Callsign</th>
                    <th>User ID</th>
                    <th>User Name</th>
                </tr>

                @foreach (UAV uavs_user_user_id in Model.UAVs)
                {
                    <tr>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.Id)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.Callsign)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.User_user_id)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.User.username)</td>
                    </tr>
                }

            </table>
        </div>
        <div id="unass">
            <h4>Unassigned UAVs</h4>
            <table class="unassigned" id="unassigned" style="border: 1px solid black;">
                <tr>
                    <th>UAV ID</th>
                    <th>Callsign</th>
                    <th>User ID</th>
                    <th>User Name</th>
                </tr>

                @foreach (UAV uavs_user_user_id in Model.UAVs)
                {
                    <tr>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.Id)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.Callsign)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.User_user_id)</td>
                        <td style="padding: 5px;">@Html.DisplayFor(modelItem => uavs_user_user_id.User.username)</td>
                    </tr>
                }

            </table>
        </div> 
        <div id="curr">
            <h4>Current Emergencies:</h4>
            <table class="curr_emergen" id="curr_emergen" style="border: 1px solid black;">
                <tr>
                    <th>UAV ID</th>
                    <th>Callsign</th>
                    <th>Current State</th>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>

