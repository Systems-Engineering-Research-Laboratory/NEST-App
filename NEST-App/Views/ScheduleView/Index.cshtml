@model IEnumerable<NEST_App.Models.Schedule>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Index";
}

<style>
</style>
<div>
    <h2><u>Schedule</u></h2>
    <dl class="dl-horizontal"></dl>
    </div>
    <h3>Missions:</h3>

 <table class= "table">
        <tr>
            <th>
                UAV Callsign:
            </th>
            <th>
                Estimated Delivery Time:
            </th>
            <th>
                Scheduled Delivery Time:
            </th>
            <th>
                Destination Coordinates: (lat, long)
            </th>
            <th>
                Mission Phase:
            </th>
            <th>
                Delivery Package:
            </th>
        </tr>
      @foreach (var sched in Model)
      {
         <tr>
             <td>  @(sched.UAV.Callsign.ToString()+":")</td>
             @foreach (var mission in sched.Missions)
             {
             <tr>
                 <td>  @(mission.EstimatedCompletionTime) </td>
                 <td>  @(mission.ScheduledCompletionTime) </td>
                 <td>  @(mission.Latitude + "," + mission.Longitude) </td>
                 <td>  @(mission.Phase)</td>
                 <td>  @(mission.Payload)</td>
             </tr>
             }
        </tr>
      }
 </table>
<h3>Maintenances:</h3>

 <table class="table">
           <tr>
               <th>
                   UAV Callsign
               </th>
               <th>
                   Last Maintenance:
               </th>
               <th>
                   Next Maintenance:
               </th>
               <th>
                   Time Remaining:
               </th>
           </tr>
    @foreach (var sched in Model)
    { 
           <tr>
               @foreach (var maintenance in sched.Maintenances)
               {
                   <td> @(maintenance.last_maintenance)</td>
                   <td> @(maintenance.next_maintenance)</td>
                   <td> @(maintenance.time_remaining)</td>
               }
            </tr>
        }
 </table>




