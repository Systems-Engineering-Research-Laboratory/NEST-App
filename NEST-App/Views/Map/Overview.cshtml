@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}

@{
    ViewBag.Title = "Overview";
}
<script src="http://openlayers.org/en/v3.0.0/build/ol.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-2.1.0.js"></script>

<!--This is the map element OL refers to-->
<div id="map" class="map" ></div>

<div id="info">
    <p>Position: <span id="Position"></span></p>
    <p>Accuracy: <span id="Accuracy"></span></p>
    <p>Heading: <span id="Heading"></span></p>
    <p>Speed: <span id="Speed"></span></p>
    <p>Delta: <span id="Delta"></span></p>
</div>
<div id="MapViews">
    <div class="WindowTitle">Map Views</div>
    <div class="WindowContent">
        <form id="ViewsRadio">
            <input type="radio" name="view" id="View1" checked="checked" onclick="switchLayers(0)">
            <span>OpenStreetMaps</span><br>
            <input type="radio" name="view" id="View2" onclick="switchLayers(1)">
            <span>MapQuest</span><br>
            <input type="radio" name="view" id="View3" onclick="switchLayers(2)">
            <span>Bing Maps</span><br>
        </form>
    </div>
</div>
<div id="LayerFilter">
    <div class="WindowTitle">Filters</div>
    <div class="WindowContent">
        <div id="FilterBoxes">
            <input type="checkbox" name="Filter1">
            <span id="Filter1">Filter 1</span><br>
            <input type="checkbox" name="Filter2">
            <span id="Filter2">Filter 2</span><br>
            <input type="checkbox" name="Filter3">
            <span id="Filter3">Filter 3</span><br>
            <input type="checkbox" name="Filter4">
            <span id="Filter4">Filter 4</span><br>
        </div>
    </div>
</div>
<div id="Tools">
    <div id="ToolsMenu">
        <img src="../Content/img/origin.jpg" alt="" width="46" height="44" class="ToolIcon" id="Expand" onclick="triggerToolMenu()" />
        <input type="image" src="../Content/img/green.jpg" id="start" width="46" height="44" class="ToolIcon">
        <input type="image" src="../Content/img/red.jpg" id="stop" width="46" height="44" class="ToolIcon">
        <input type="image" src="../Content/img/yellow.jpg" id="loadDrones" width="46" height="44" class="ToolIcon">
        <img src="../Content/img/blue.jpg" width="46" height="44" alt="" class="ToolIcon" />
        <img src="../Content/img/purple.jpg" width="46" height="44" alt="" class="ToolIcon" onclick="new_dest_show()" />
    </div>
</div>

<!--command pop up place holder-->
<div id="CommPopPlaceHolder">

    <!--command pop up starts here-->
    <div id="CommPop">
        <form action="#" method="post" id="new_dest_popup">
            <img src="~/Content/img/close_btn.png" id="close_button" onclick="new_dest_hide()" />
            <h3>New Destination</h3>
            <p>
                (
                <input type="text" name="new_longitude" id="new_long" placeholder="New Longitude" />
                , 
                <input type="text" name="new_latitude" id="new_lat" placeholder="New Latitude" />
                )
            </p>
            <button type="submit" name="submit" id="submit">GO</button>
            <button type="reset" name="reset" id="reset">CLEAR</button>
        </form>
    </div>
</div>


<script src="~/Scripts/proj4.js" type="text/javascript"></script>
<script src="~/Scripts/simulation.js" type="text/javascript"></script>
<script src="~/Scripts/vehicle.js" type="text/javascript"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery-signalR")
@Scripts.Render("~/signalr/hubs")
@Scripts.Render("~/bundles/olMapJS")
@Styles.Render("~/bundles/olMapCSS")